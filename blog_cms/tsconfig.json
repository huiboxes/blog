{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./",
    "src/**/*.json",
    "config/**/*.ts", // ADD
    "config/**/*.js", // ADD if you have JS files
    "src/**/*.ts", // ADD
    "src/**/*.tsx", // ADD
    "src/**/*.js",  // ADD if you have JS files
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ]
}
